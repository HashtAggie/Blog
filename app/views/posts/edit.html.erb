<h1>Edit Posts</h1>
<%= form_for @post do |f| %>

<% if @post.errors.any? %>
  <h2>Errors:</h2>
<ul>
<% @post.errors.full_messages.each do |message| %>
   <li><%= message %></li>
<% end %>
</ul>
<% end %>

<p>
   <%= f.label :title %><br />
   <%= f.text_field :title %><br />
</p>

<p>
   <%= f.label :text %><br />
   <%= f.text_area :text %><br />
</p>

<p>
   <%= f.submit "Update Post" %><br />
</p>

<% end %>
